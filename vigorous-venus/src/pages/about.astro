---
const path = Astro.url.pathname;
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Header from '../components/Header.astro';
---

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{SITE_TITLE}</title>
  <meta name="description" content={SITE_DESCRIPTION} />
</head>

<Header />

<main class="about">
  <h1 class="name">PGE</h1>
  <p class="subtitle small">aka. Elliot Sim</p>
  <p class="subtitle small">the founder of Asswitch Studio</p>

  <div class="bio">
    <p>Plays with cameras and what cameras produce.</p>
    <p>Writes in English and Chinese.</p>
    <p>Matcha enthusiast.</p>
    <p>Gallery goer.</p>
    <p>SNL watcher.</p>
    <p>Always wants to play tennis.</p>
    <p>Fan of Tina Fey, Steve Jobs and Andy Warhol.</p>
  </div>

  <div class="contact">
    <p>contact info: <a href="mailto:pp@asswitch.studio">pp@asswitch.studio</a></p>
    <p>instagram: <a href="https://instagram.com/P9653_">@P9653_</a></p>
  </div>
</main>

<style>
 

.about {
  max-width: 32rem;
  margin: 30vh auto 0 auto;
  font-size: 0.95rem;
  line-height: 1.6;
}

.about h1.name {
  font-size: 1.5rem;
  font-weight: normal;
  margin-bottom: 0.6rem;
}

.subtitle {
  margin: 0;
}

.subtitle.small {
  font-size: 0.8rem;
  opacity: 0.7;
}

.bio {
  margin-top: 1.5rem;
}

.bio p {
  margin: 0.25rem 0;
}

.contact {
  margin-top: 3rem;
  font-size: 0.85rem;
}

.contact a {
  text-decoration: none;
}

/* Responsive tweaks for small screens */
@media (max-width: 900px) {
  .about {
    margin: 20vh auto 0;
    max-width: 40rem;
  }
}

@media (max-width: 600px) {
  .about {
    margin: 12vh auto 0;
    padding: 0 1rem;
    max-width: 92%;
  }
}

@media (max-width: 360px) {
  .about { margin-top: 10vh; }
}
</style>
